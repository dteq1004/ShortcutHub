<div class="flex flex-col items-center">
    <%= render partial: "users/profile", locals: { shortcuts_count: @shortcuts_count, user: @user } %>
    <div class="w-full sm:max-w-2xl p-3">
        <div class="flex justify-between items-center mb-5">
            <p class="text-xl font-bold">フォロー中</p>
        </div>
        <% if @users.present? %>
            <div class="bg-white rounded-xl shadow-sm px-3 divide-y-1 divide-zinc-300">
                <% @users.each do |user| %>
                    <%= render 'user', user: user %>
                <% end %>
            </div>
        <% else %>
            <p>フォローしているユーザーはいません</p>
        <% end %>
    </div>
</div>
