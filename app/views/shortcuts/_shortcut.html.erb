<div class="flex flex-col justify-between rounded-xl shadow-sm bg-white">
    <%= link_to shortcut_path(shortcut) do %>
        <div class="aspect-16/7 flex justify-center items-center p-3 bg-teal-500 rounded-t-xl">
            <%= image_tag "icon1.svg", class: "size-8" %>
        </div>
        <h2 class="text-base p-2"><%= shortcut.title %></h2>
    <% end %>
    <div>
        <div class="flex justify-between items-center p-2 truncate">
            <%= link_to root_path, class: "flex items-center " do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /></svg>
                <p class="pl-1 text-xs"><%= shortcut.user.name %></p>
            <% end %>
        </div>
    </div>
</div>