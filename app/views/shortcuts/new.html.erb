<div class="flex justify-center pt-22">
    <%= form_with model: @shortcut do |f| %>
        <div class="flex flex-col justify-center items-center w-44">
            <div class="rounded-xl shadow-xl bg-white mb-10">
                <div class="flex justify-center p-3 bg-zinc-500 rounded-t-xl">
                    <%= image_tag "icon1.svg" %>
                </div>
                <%= f.text_area :title,
                    autofocus: true,
                    class: "whitespace-normal h-auto w-full text-[16px] p-2 pb-0 outline-none validator",
                    placeholder: "ここにタイトルを入力してください",
                    required: true,
                    pattern: "[A-Za-z][A-Za-z0-9\-]*",
                    minlength: "3",
                    maxlength: "30"
                %>
                <div class="flex items-center px-1 pb-2 opacity-50">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /></svg>
                    <p class="pl-1 text-[12px]"><%= current_user.name %></p>
                </div>
            </div>
            <%= f.submit "詳細の入力へ", class: "btn btn-accent rounded-full shadow-xl text-white" %>
        </div>
    <% end %>
</div>