<div class="h-screen">
  <div class="flex justify-center py-4 bg-white">
    <%= image_tag 'logo.png', class: "h-10" %>
  </div>
  <%= form_with model: @user, url: user_password_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-5 p-6">
      <h3 class="text-xl font-bold mb-5">パスワードの再設定</h3>
      <div>
        <%= f.label "ご登録のメールアドレス" %>
        <div class="w-full flex items-center input validator rounded-lg mt-1 pr-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-zinc-500"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" /></svg>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-sm text-base outline-none", placeholder: 'メールアドレス', type: "email", required: "true" %>
        </div>
        <div class="validator-hint">正しいメールアドレスを入力してください</div>
      </div>

      <div class="flex flex-col items-center">
        <%= f.submit "パスワード再設定用リンクを送信", class: "w-full btn btn-accent my-4 rounded-full text-white" %>
        <%= link_to 'ログイン画面に戻る', new_user_session_path, class: "w-full btn btn-outline rounded-full bg-white" %>
      </div>
    </div>
  <% end %>
</div>
