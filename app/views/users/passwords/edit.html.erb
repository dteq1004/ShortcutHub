<div class="h-screen">
  <div class="flex justify-center py-4 bg-white">
    <%= image_tag 'logo.png', class: "h-10" %>
  </div>
  <%= form_with model: @user, url: user_password_path, method: "put" do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="mb-5 p-6">
      <h3 class="text-xl font-bold mb-5">パスワードの再設定</h3>
      <div class="mb-2">
        <%= f.label "新しいパスワード" %>
        <div class="w-full flex items-center input validator rounded-lg my-1 pr-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-zinc-500"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" /></svg>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg text-base", type: "password", required: "true", placeholder: "パスワード" %>
        </div>
        <div class="validator-hint">正しいパスワードを入力してください</div>
      </div>
      <div>
        <%= f.label "新しいパスワード（確認用）" %>
        <div class="w-full flex items-center input validator rounded-lg my-1 pr-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-zinc-500"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" /></svg>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg text-base", type: "password", required: "true", placeholder: "パスワード" %>
        </div>
        <div class="validator-hint">正しいパスワードを入力してください</div>
      </div>
      <div class="flex flex-col items-center">
        <%= f.submit "パスワードを変更", class: "w-full btn btn-accent my-4 rounded-full text-white" %>
      </div>
    </div>
  <% end %>
</div>
