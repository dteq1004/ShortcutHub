<div class="h-screen">
  <div class="bg-white">
    <div class="flex justify-center py-4">
      <%= image_tag 'logo.png', class: "h-10" %>
    </div>
    <div class="grid grid-cols-2">
      <%= link_to new_user_session_path, class: "col-span-1 flex justify-center items-center border-b-2 border-zinc-400 py-2" do %>
        <p class="text-lg text-zinc-400 font-bold">ログイン</p>
      <% end %>
      <div class="col-span-1 flex justify-center items-center border-b-4 border-teal-700 py-2">
        <p class="text-lg text-teal-700 font-bold">新規登録</p>
      </div>
    </div>
  </div>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="p-6 sm:px-20">
      <div class="mb-2">
        <%= f.label :email %>
        <div class="w-full flex items-center input validator rounded-lg mt-1 pr-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-zinc-500"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" /></svg>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-base outline-none rounded-r-lg", type: "email", required: "true", placeholder: 'メールアドレス' %>
        </div>
        <div class="validator-hint">正しいメールアドレスを入力してください</div>
      </div>

      <div class="mb-2">
        <%= f.label :password %>
        <div class="w-full flex items-center input validator rounded-lg my-1 pr-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-zinc-500"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" /></svg>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-r-lg text-base", type: "password", required: "true", minlength: 8, placeholder: "半角英数字のみで8文字以上", pattern: "^([a-zA-Z0-9]{8,})$" %>
        </div>
        <div class="validator-hint">半角英数字のみで8文字上入力してください</div>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <div class="w-full flex items-center input validator rounded-lg my-1 pr-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-zinc-500"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" /></svg>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg text-base", type: "password", required: "true", minlength: 8, placeholder: "パスワード再入力" %>
        </div>
        <div class="validator-hint">パスワードを再入力してください</div>
      </div>
    </div>

    <div class="px-6 mb-5 sm:flex sm:justify-center">
      <p class="text-xs">
        本サービスに登録すると、
        <%= link_to "利用規約", root_path, class: "link link-accent" %>
        と
        <%= link_to "プライバシーポリシー", root_path, class: "link link-accent" %>
        に同意したことになります。
      </p>
    </div>

    <div class="flex justify-center px-6 sm:flex sm:justify-center">
      <%= f.submit "同意して登録", class: "w-full sm:max-w-1/2 btn btn-accent rounded-full text-white" %>
    </div>
  <% end %>
</div>