<%= turbo_frame_tag "comment_reply_modal" do %>
    <div class="fixed inset-0 w-screen h-screen pt-4 flex items-center justify-center z-50 bg-gray-500/70" data-controller="comment-reply-modal" data-comment-reply-modal-target="backGround">
        <div class="w-full h-full bg-white rounded-t-xl overflow-y-scroll" data-comment-reply-modal-target="commentReplyModal">
            <div class="sticky top-0">
                <div class="flex justify-between items-center bg-white p-2">
                    <div class="flex items-center p-2">
                        <span class="block w-1 h-6 bg-teal-700 mr-2"></span>
                        <p class="text-lg font-bold">コメント</p>
                    </div>
                    <div data-action="click->comment-reply-modal#closeModal" class="p-2 rounded-full shadow-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6"><path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" /></svg>
                    </div>
                </div>
                <div class="w-full flex p-4 bg-teal-50">
                    <div class="size-8 mr-2">
                        <% if @comment.user.avatar.present? %>
                            <%= image_tag @comment.user.avatar, class: "rounded-full object-cover aspect-1/1" %>
                        <% else %>
                            <%= image_tag "user_default_icon.png", class: "rounded-full object-cover aspect-1/1" %>
                        <% end %>
                    </div>
                    <div class="w-full">
                        <p class="text-xs text-zinc-700 font-bold"><%= @comment.user.name %></p>
                        <p class="text-xs text-zinc-500 mb-2">@<%= @comment.user.uid %></p>
                        <p class=""><%= @comment.body %></p>
                    </div>
                </div>
            </div>
            <div class="w-full overflow-y-scroll mb-22 pl-11 pt-4 pr-4" id="comment-reply-list">
                <% if @comment.replies.present? %>
                    <%= render partial: "comments/reply", collection: @comment.replies %>
                <% end %>
            </div>
            <% if user_signed_in? %>
                <%= form_with model: Comment.new, url: shortcut_comments_path(@shortcut), class: "fixed w-full bg-zinc-50 p-4 bottom-0 flex items-end gap-2", id: "comment-form" do |f| %>
                    <%= f.hidden_field :parent_id, value: @comment.id %>
                    <div class="grow flex items-start gap-2">
                        <% if current_user.avatar.present? %>
                            <%= image_tag current_user.avatar, class: "flex-none size-8 aspect-1/1 object-cover rounded-full mt-1" %>
                        <% else %>
                            <%= image_tag "user_default_icon.png", class: "flex-none size-8 aspect-1/1 object-cover rounded-full mt-1" %>
                        <% end %>
                        <%= f.text_area :body, id: "comment-input", placeholder: "返信を入力", class: "grow auto-adjust h-10 px-3 py-2 border border-zinc-300 bg-white outline-none overflow-hidden rounded-xl text-base", required: true %>
                    </div>
                    <%= f.submit "↑", id: "comment-submit-button", class: "flex-none bg-teal-500 text-white px-4 py-1 mb-1 rounded-full" %>
                <% end %>
            <% end %>
        </div>
    </div>
<% end %>
