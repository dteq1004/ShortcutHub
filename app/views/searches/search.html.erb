<div class="p-4">
    <div class="mb-4">
        <h1 class="text-2xl text-zinc-700 font-bold">検索</h1>
        <p class="text-md text-teal-700 font-sans font-bold">Search</p>
    </div>
    <div class="p-2 mb-8">
        <p class="mb-4 text-lg font-bold">キーワードで探す</p>
        <%= render "search_form", q: @q, url: search_index_path %>
    </div>
    <div class="p-2">
        <p class="mb-4 text-lg font-bold">タグで探す</p>
        <div class="flex flex-wrap gap-4">
            <% @tags.each do |tag| %>
                <%= link_to search_index_path(tag_name: tag.name), class: "flex justify-start items-center rounded-full border border-zinc-300 bg-white p-[2px] pr-1" do %>
                    <div class="flex justify-center items-center size-5 rounded-full bg-zinc-500">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 fill-white"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" /></svg>
                    </div>
                    <p class="mx-1 text-sm"><%= tag.name %></p>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
